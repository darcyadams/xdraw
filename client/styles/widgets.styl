//----------------------------------
// Spinner
//----------------------------------
.spinner-wrapper
  width: 100%
  height: 100%
  position: relative

  .spinner
    top: 50%
    left: 50%

//----------------------------------
// Search Input
//----------------------------------

.search-input-wrap
  position: relative
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  
.search-input
  border-radius: 5px
  margin-right: 0px
  padding-right: 20px
  padding-left: 5px

.search-clear
  absPos(top: 50%, right: 5px)
  margin-top: -8px
  width: 16px
  height: 16px
  //margin-left: -20px
  border-radius: 7px
  background-image: url('../images/search_clear.svg')
  background-position: 2px 2px
  background-repeat: no-repeat
  background-size: 13px
  color: white
  border: none

.search-clear:focus
  outline: none

//----------------------------------
// Toggle Button Array
//----------------------------------

.toggle-buttons
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
  height: 28px;
  padding: 0px

.toggle-button
  color: textColor3
  border-radius: 0px
  height: 28px
  padding-left: 20px
  padding-right: 20px
  line-height: 21px
  background-color: white
  border-bottom: 1px solid forward1
  border-top: 1px solid forward1
  border-right: 1px solid forward1
  &.is-selected
    background-color: forwardSelected4
    color: white
  &.is-selected:hover
    background-color: forwardSelected4
    color: white

.toggle-button:hover
  background-color: forwardHover4
.toggle-button:focus
  outline: none

.toggle-button:first-child
  border-left: 1px solid forward1
  border-top-left-radius: 5px
  border-bottom-left-radius: 5px

.toggle-button:last-child
  border-top-right-radius: 5px
  border-bottom-right-radius: 5px
  


//----------------------------------
// Multi Select
//----------------------------------

//.multiselect

.multiselect-list-in
  border-bottom: 1px solid forward1

.multiselect-list-out
  height: 112px
  overflow-y: auto

.multiselect-edit
  color: textColor3
  height: 28px
  font-size: 13px
  padding-left: 0px
.multiselect-edit:focus
  outline: none

.multiselect-alter
  width: 13px
  height: 13px
  margin-top: -2px
  margin-right: 5px
  border-radius: 7px
  background-image: url('../images/search_clear.svg')
  background-position: 0px 0px
  background-repeat: no-repeat
  background-size: 13px
  color: white
  border: none


.multiseclect-option
  position: relative
  border: none
  height: 28px
  line-height 28px
  cursor: pointer
  padding-left: 20px
  //&.is-active
  //  font-weight: bold

.multiseclect-option-label 
  absPos(top: 50%)
  height: 28px
  margin-top: -14px
  transition: left .1s linear

.multiseclect-none
  height: 28px
  line-height 28px
  color: textColor3
  padding-left: 5px
  line-height: 28px

.multiseclect-default
  absPos(top: 50%, right: 0)
  color: textColor3
  border-radius: 5px
  height: 22px
  padding-left: 10px
  padding-right: 10px
  line-height: 18px
  background-color: none
  border: none
  margin-top: -11px
  &.is-selected
    background-color: forwardSelected4
    color: white
  &:focus
    outline: none

.multi-select-filter
  margin: 0px auto
